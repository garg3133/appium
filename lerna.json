{
  "command": {
    "run": {
      "concurrency": 8
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "version": {
        "allowBranch": "master"
      }
    },
    "add": {
      "exact": true
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/*.md"
  ],
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
